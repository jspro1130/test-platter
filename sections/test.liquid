<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign products_to_display = 10
  if section.settings.collection != blank
    assign collection = section.settings.collection
  endif
-%}

<div class="section-{{ section.id }}-padding bg-white">
  <div class="page-width page-width-desktop mx-auto !px-6 !md:px-0">
    {%- if section.settings.title != blank -%}
      <div class="mb-8 text-center md:text-left md:justify-between md:items-center md:flex">
        <h2 class="font-black text-[40px] leading-[120%] text-gray-900">
          {{ section.settings.title }}
        </h2>
        <a href="{{collection.url}}" class="hidden md:flex gap-2 items-center font-poppins font-semibold text-[14px] leading-[140%] tracking-[0.03em] text-center">Shop All {{collection.title}} {% render 'icon-arrow'%} </a>
      </div>
    {%- endif -%}

    {%- if collection != blank and collection.products.size > 0 -%}
      {%- liquid
        assign initial_products = 4
        assign total_products = collection.products.size
        if total_products > products_to_display
          assign total_products = products_to_display
        endif
        assign has_more_products = false
        if total_products > initial_products
          assign has_more_products = true
        endif
      -%}
      
        <div class="hidden md:block">
            <div class="swiper test-swiper-{{ section.id }} relative">
                <div class="swiper-wrapper">
                {%- for product in collection.products limit: products_to_display -%}
                    <div class="swiper-slide">
                        {% render 'test-card-product', product: product %}
                    </div>
                {%- endfor -%}
                </div>
                
                <!-- Pagination -->
                <div class="swiper-pagination test-swiper-pagination-{{ section.id }} !relative !mt-16"></div>
            </div>
        </div>
      <div class="md:hidden">
        <div class="!grid grid-cols-2 gap-x-4" id="mobile-grid-{{ section.id }}">
          {%- for product in collection.products limit: products_to_display -%}
            <div class="pb-8 product-item-{{ section.id }}{% if forloop.index > initial_products %} product-hidden-{{ section.id }}{% endif %}">
              {% render 'test-card-product', product: product %}
            </div>
          {%- endfor -%}
        </div>
        {%- if has_more_products -%}
          <div class="mt-6" id="show-more-container-{{ section.id }}">
            <button
              type="button"
              id="show-more-btn-{{ section.id }}"
              class="w-full font-poppins font-semibold text-[16px] leading-[140%] tracking-[0.03em] text-center text-white bg-[#1C1D1D] pt-4 pr-6 pb-4 pl-6 transition-all duration-300 hover:opacity-90 rounded-[100px]"
            >
              Show More
            </button>
          </div>
        {%- endif -%}
      </div>
    {%- else -%}
      <div class="text-center py-12">
        <p class="text-gray-600">No products found in this collection.</p>
      </div>
    {%- endif -%}
  </div>
</div>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile: Show More button functionality with smooth animation
    const showMoreBtn = document.getElementById('show-more-btn-{{ section.id }}');
    const showMoreContainer = document.getElementById('show-more-container-{{ section.id }}');
    if (showMoreBtn) {
      showMoreBtn.addEventListener('click', function() {
        const hiddenProducts = document.querySelectorAll('.product-item-{{ section.id }}.product-hidden-{{ section.id }}');
        
        // Fade out button smoothly
        showMoreBtn.style.transition = 'opacity 0.3s ease-out, transform 0.3s ease-out';
        showMoreBtn.style.opacity = '0';
        showMoreBtn.style.transform = 'translateY(-10px)';
        
        // Show products with staggered animation
        hiddenProducts.forEach(function(product, index) {
          setTimeout(function() {
            // Use requestAnimationFrame to ensure smooth transition
            requestAnimationFrame(function() {
              product.classList.remove('product-hidden-{{ section.id }}');
              product.classList.add('product-visible-{{ section.id }}');
            });
          }, index * 80); // 80ms delay between each product for smoother effect
        });
        
        // Hide button container after animation completes
        setTimeout(function() {
          if (showMoreContainer) {
            showMoreContainer.style.display = 'none';
          }
        }, 400);
      });
    }

    // Desktop: Initialize Swiper
    new Swiper('.test-swiper-{{ section.id }}', {
      slidesPerView: 1,
      spaceBetween: 16,
      loop: true,
      arrows: false,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.test-swiper-pagination-{{ section.id }}',
        type: "progressbar",
      },
      navigation: {
        nextEl: '.test-swiper-button-next-{{ section.id }}',
        prevEl: '.test-swiper-button-prev-{{ section.id }}',
      },
      breakpoints: {
        640: {
          slidesPerView: 3,
          spaceBetween: 16,
        },
        768: {
          slidesPerView: 3.6,
          spaceBetween: 16,
        },
        1024: {
          slidesPerView: 4.6,
          spaceBetween: 16,
        },
      },
    });
  });
</script>

<style>
  .test-swiper-{{ section.id }} .swiper-pagination-progressbar {
    background: #DDD6D7;
    border-radius: 2px;
    height: 4px;
  }
  .test-swiper-{{ section.id }} .swiper-pagination-progressbar:hover {
    
    transform: scaleY(1.5);
  }
  
  .test-swiper-{{ section.id }} .swiper-pagination-progressbar-fill {
    background: #231F20;
    border-radius: 2px;
  }

  /* Mobile Show More Animation */
  .product-hidden-{{ section.id }} {
    opacity: 0;
    transform: translateY(20px);
    max-height: 0;
    overflow: hidden;
    margin-top: 0;
    margin-bottom: 0;
    padding-bottom: 0;
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), 
                max-height 0.6s cubic-bezier(0.4, 0, 0.2, 1),
                margin 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-visible-{{ section.id }} {
    opacity: 1;
    transform: translateY(0);
    max-height: 2000px;
    margin-top: 0;
    margin-bottom: 0;
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), 
                max-height 0.6s cubic-bezier(0.4, 0, 0.2, 1),
                margin 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  #show-more-btn-{{ section.id }} {
    transition: opacity 0.3s ease-out, transform 0.3s ease-out;
  }
</style>

{% schema %}
{
  "name": "t:sections.test.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.test.settings.title.label",
      "default": "t:sections.test.settings.title.default"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.test.settings.collection.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.test.presets.name"
    }
  ]
}
{% endschema %}
